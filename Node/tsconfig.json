{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "rootDir": "./",
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*"],
            "ubiq-server/ubiq": ["node_modules/ubiq-server/ubiq/index.ts"],
            "ubiq-server/ubiq/*": ["node_modules/ubiq-server/ubiq/*"],
            "ubiq-server/components": ["node_modules/ubiq-server/components/index.ts"],
            "ubiq-server/components/*": ["node_modules/ubiq-server/components/*"],
            "modules": ["node_modules/ubiq-server/modules/index.ts"],
            "modules/*": ["node_modules/ubiq-server/modules/*"],
            "@ubiq": ["node_modules/ubiq-server/ubiq"],
            "@ubiq-server-components": ["node_modules/ubiq-server/components"],
            "@services/*": ["services/*"],
            "@components/*": ["components/*"]
        },
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@roamhq/wrtc/types"
        ]
    },
    "include": ["**/*.ts", "eslint.config.js"],
    "ts-node": {
        "compilerOptions": {
            "module": "NodeNext",
            "moduleResolution": "NodeNext"
        },
        "esm": true,
        "experimentalSpecifierResolution": "node",
        "transpileOnly": true,
        "skipIgnore": false,
        "ignore": ["(?:^|[\\\\/])node_modules[\\\\/](?!ubiq-server[\\\\/])"]
    },
    "exclude": ["dist", "node_modules", "bin"]
}
